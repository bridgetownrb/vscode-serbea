{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Serbea (Ruby)",
	"patterns": [
		{
			"include": "text.html.basic"
		},
		{
      "include": "#frontmatter"
    }
	],
	"injections": {
		"text.html.serb - (meta.embedded.block.serb | meta.embedded.line.serb | meta.tag | comment), L:meta.tag, L:source.js.embedded.html": {
			"patterns": [
				{
					"begin": "(^\\s*)(?={[%{](?![^%]*[%}]}))",
					"beginCaptures": {
						"0": {
							"name": "punctuation.whitespace.embedded.leading.erb"
						}
					},
					"end": "(?!\\G)(\\s*$\\n)?",
					"endCaptures": {
						"0": {
							"name": "punctuation.whitespace.embedded.trailing.erb"
						}
					},
					"patterns": [
						{
							"include": "#tags"
						}
					]
				},
				{
					"include": "#tags"
				}
			]
		}
	},
	"repository": {
		"frontmatter": {
      "contentName": "source.yaml",
      "name": "meta.embedded.block.frontmatter.serb",
      "begin": "---(?=\\s*\\n)",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.frontmatter.begin.serb"
        }
      },
      "end": "---(?=\\s*\\n)",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.frontmatter.end.serb"
        }
      },
      "patterns": [
        {
          "include": "source.yaml"
        }
      ]
    },
		"tags": {
			"patterns": [
				{
					"begin": "{[%{]+(?!})[-=@:]?=?(?![^%]*[%}]})",
					"beginCaptures": {
						"0": {
							"name": "punctuation.section.embedded.begin.erb"
						}
					},
					"contentName": "source.ruby.embedded.erb",
					"end": "-?[%}]}",
					"endCaptures": {
						"0": {
							"name": "punctuation.section.embedded.end.erb"
						},
						"1": {
							"name": "source.ruby"
						}
					},
					"name": "meta.embedded.block.erb",
					"patterns": [
						{
							"captures": {
								"1": {
									"name": "punctuation.definition.comment.erb"
								}
							},
							"match": "(#).*?(?=-?[%}]})",
							"name": "comment.line.number-sign.erb"
						},
						{
							"include": "source.ruby"
						}
					]
				},
				{
					"begin": "{[%{]+(?!})[-=@:]?=?",
					"beginCaptures": {
						"0": {
							"name": "punctuation.section.embedded.begin.erb"
						}
					},
					"contentName": "source.ruby.embedded.erb",
					"end": "-?[%}]}",
					"endCaptures": {
						"0": {
							"name": "punctuation.section.embedded.end.erb"
						},
						"1": {
							"name": "source.ruby"
						}
					},
					"name": "meta.embedded.line.erb",
					"patterns": [
						{
							"captures": {
								"1": {
									"name": "punctuation.definition.comment.erb"
								}
							},
							"match": "(#).*?(?=-?[%}]})",
							"name": "comment.line.number-sign.erb"
						},
						{
							"include": "source.ruby"
						}
					]
				}
			]
		}
	},
	"scopeName": "text.html.serb"
}